      <div class="container">

        <h2>Website</h2>

        <p></p>

      </div>

    </div>

  </div>

 

 <div class="column">

    <div class="card">

      <div class="container">

        <h2>Social Media</h2>

        <p></p>

      </div>

    </div>

  </div>

 

</div>

</body>

</html>